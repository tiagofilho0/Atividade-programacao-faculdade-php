REVISÃO 3

<?php

$compra = 1200;

$juros = ($compra*0.12);

$total = $compra + $juros;

$parcelas = $total / 12;

echo $parcelas."<br>";
echo $total;
echo("<br>");
?>

portugol -->

variavel1 = 1200;

variavel2 = variavel1*0.12;

variavel3 = variavel1 + variavel2;

variavel4 = variavel3 / 12;

escreva variavel4

escreva variavel3

