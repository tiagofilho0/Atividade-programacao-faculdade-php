REVISÃO 4

<?php

$valor = 21000;

$idade = $valor / 365;

echo("<br>");
echo number_format($idade);

if ($idade >= 18) {
   echo (' você é de maior');
}
 else{echo('você é de menor');
}

echo("<br>");

?>

portugol -->

variavel1 = 21000;

variavel2 = variavel1 / 365;

escreva variavel2;

se variavel2 >= 18 escreva 'você é de maior'

senão escreva 'você é de menor'

