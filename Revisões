REVISÃO 5

<?php

$valor = 3;

for ($i=0; $i < $valor ; $i++) { 
    echo ("<br>");
   for ($a=0; $a <= $i ; $a++) { 
    echo('FPB');
   } 
}

echo("<br>");
?>

portugol -->

valor = 3

para ( i=0; i < valor ; i++){
    escreva "<br>"
    para ( J=0; J < i ; j++){
        escreva FPB
  }


}

