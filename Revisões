REVISÃO 6

<?php

$a = 10;
$b = 15;
$c = 20;
$d = 25;

$cd = $c + $d;

$ab = $a + $b;

if ($b > $c and $d > $a and $cd > $ab and $c > 0 and $d > 0 and $a > 0) {
  echo('valores aceitos');
}

else ('valores não aceitos')

?>

